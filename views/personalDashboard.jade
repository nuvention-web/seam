extends signedin

block content
	.page.margin-center
		.container-85p.bg-white.margin-center
			.row
				.col-md-11.col-md-offset-1
					h2.text-left
						span.text-black #{user.local.email}'s 
						span.text-red Dashboard
			.row.bg-white
				.col-md-12
					h2.text-black MY TASKS
			each user, i in userlist
				if(i%2==0)
					.row.bg-ltgray
						form.form-inline.form-center(role='form', method='POST', action='/finishtask')
							input(type='hidden', name='meetingId', value='#{user._id}')
							.col-md-10.col-md-offset-1
								h3.text-black.text-left #{user.meetingTask}
							if(user.isComplete == 0)
								.col-md-1.padding-top-1p
									button.text-white.border-50p.bg-red-border.text-h4.text-center(type='submit', class="text-center lsf-icon" , style="margin-left:10px;", title="check")
							else
								.col-md-1.padding-top-1p Waiting on Approval
				else
					.row.bg-white
						form.form-inline.form-center(role='form', method='POST', action='/finishtask')
							input(type='hidden', name='meetingId', value='#{user._id}')
							.col-md-10.col-md-offset-1
								h3.text-black.text-left #{user.meetingTask}
							.col-md-1.padding-top-1p
								button.text-white.border-50p.bg-red-border.text-h4.text-center(type='submit', class="text-center lsf-icon" , style="margin-left:10px;", title="check") 
				