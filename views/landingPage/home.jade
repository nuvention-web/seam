extends layout

block content
	.wrapper
		.screen#screen-1(data-video="../../video/meeting.mp4")
			.img.big-image(src="../../images/bg-video.jpg")
		.bg-white-trans-abs
	div#home-page.page.full-page
		.container-95p.margin-center.margin-bottom-10p.mobile-margin-top-150x
			.row.margin-top-12p
				.col-md-12.margin-top-3p.text-shadow
					h1.line-height-15x.text-40x.text-white.text-bold.text-center.line-height-30x.text-upper.text-open-sans Bad meetings suck. We feel your pain.
			.row
				.col-md-12.text-left.mobile-hidden.text-shadow.mobile-margin-top-40x.text-center.margin-top-2p.text-merriweather
					h3.line-height-12x.text-white.text-normal.text-center.line-height-15x.text-merriweather SEAM covers all the bases in helping you hold great meetings. 
					h3.line-height-12x.text-white.text-normal.text-center.line-height-15x.text-merriweather Great meetings cut down on future meetings. And we believe the fewer meetings the better.
			.row.mobile-margin-top-40x
				.col-md-12.text-center
					a.float-center.btn.btn-primary.btn-lg.border-round-5x.margin-top-3p.bg-blue-transparent.padding-btn-small.text-open-sans.text-normal(onClick="window.location.href='http://www.getseam.co/signUp'", role="button") TRY SEAM FOR FREE
	div#about-page.page.padding-top-5p.bg-white.padding-bottom-5p.mobile-hidden
		.container-100p.margin-top-1p
			.row
				.col-md-7
					.container-90p.margin-center
						.row
							.col-md-12.height-300x
								iframe#TargetFrame.big-video(name="TargetFrame", style="border:none; width:85%; height:100%; margin-left:7.5%;", height="500", src="http://www.youtube.com/embed/Z4V43FMvutE?rel=0&amp;vq=hd1080", allowfullscreen)
				.col-md-5
					.row.margin-top-3p
						a#video1(href="http://www.youtube.com/embed/Z4V43FMvutE?rel=0&amp;autoplay=1&amp;vq=hd1080" target="TargetFrame")
							.col-md-12.border-round-5x.bg-pink-blue-hover.padding-top-1p.padding-bottom-3p.padding-left-7p.padding-right-7p.min-height-100x
								h3.text-left.text-white.text-normal Establish focus
								h4.text-left.text-white.text-italic.line-height-6x Quickly create a clear agenda to share with all attendees members
					.row.margin-top-5p
						a#video1(href="http://www.youtube.com/embed/-29Bvt41p20?rel=0&amp;autoplay=1&amp;vq=hd1080" target="TargetFrame")
							.col-md-12.border-round-5x.bg-orange-blue-hover.padding-top-1p.padding-bottom-3p.padding-left-7p.padding-right-7p.min-height-100x
								h3.text-left.text-white.text-normal Gain control
								h4.text-left.text-white.text-italic.line-height-6x Use the timer, shared notes and tasks features to stay focused
					.row.margin-top-5p
						a#video1(href="http://www.youtube.com/embed/bgaFRkY1JLM?rel=0&amp;autoplay=1&amp;vq=hd1080" target="TargetFrame")
							.col-md-12.border-round-5x.bg-green-blue-hover.padding-top-1p.padding-bottom-3p.padding-left-7p.padding-right-7p.min-height-100x
								h3.text-left.text-white.text-normal Feel productive
								h4.text-left.text-white.text-italic.line-height-6x Automatically receive notes and tasks from the meeting in an email
	div#contact-page.page.padding-top-3p.bg-drkblue.padding-bottom-5p
		.container-95p.margin-center
			.row
				.col-md-12
					h1.text-big-35x.text-center.text-white Ready to meet the newest member of your meetings?
			.row
				.col-md-2.col-md-offset-5.margin-top-3p
					button.btn.btn-primary.bg-pink-orange-hover.btn-lg.btn-block.border-round-5x(onClick="window.location.href='http://www.getseam.co/signUp'", role="button") GET SEAM TODAY
	div#footer-page.page.bg-drk-gray.padding-top-1p.padding-bottom-1p
		.row
			.col-md-6
				.row
					.col-md-11.col-md-offset-1.text-left.margin-top-1p
						span.text-left
							a.text-white-orange-hover.text-h2.lsf-icon(href="https://twitter.com/seam_meetings", target="_blank", title="twitter")
							a.text-white-pink-hover.text-h2.lsf-icon(href="https://www.linkedin.com/groups/Improving-Meeting-Efficiency-6671618", target="_blank", title="linkedin")
				.row
					.col-md-11.col-md-offset-1
						h4.text-left.text-white &copy; Powered by SEAM 2014.
			.col-md-6
				.row
					.col-md-offset-8.col-md-4.margin-top-1p
						img.margin-center.img-responsive.img-18p(src="../../images/logo-noWord.png" ,alt="SEAM")