extends layout2

block content
	.container-75p.margin-center.min-height-100p
			.row.margin-top-8p.mobile-margin-top-150x
				.col-md-12
					h1.text-black.text-normal I'm ready for better meetings.
			form.form-inline.form-center(role='form', method='POST', action='/signUp')
				.row.margin-top-3p
					.col-md-3.col-md-offset-3.spacing-top.form-group
						input.form-control.border-round-5x(id='signup', type='text', placeholder='FIRST NAME', name='firstName')
					.col-md-3.spacing-top.form-group
						input.form-control.border-round-5x(id='signup', type='text', placeholder='LAST NAME', name='lastName')

				.row
					.col-md-6.col-md-offset-3.padding-top-1p.form-group
						input.form-control.border-round-5x(id='signup', type='text', name='email', placeholder= 'EMAIL')
				.row
					.col-md-6.col-md-offset-3.padding-top-1p.form-group
						input.form-control.border-round-5x(id='signup', type='password', name='password', placeholder= 'PASSWORD')
				.row.margin-top-3p
					.col-md-4.col-md-offset-4.padding-top-1p
						button.btn.btn-primary.bg-pink-orange-hover.btn-lg.btn-block.border-round-5x(type='submit') SIGN UP
				.row
					.col-md-4.col-md-offset-4
						h3.text-black.text-normal OR
				.row
					.col-md-4.col-md-offset-4.padding-top-1p
						button.btn.btn-primary.bg-pink-orange-hover.btn-lg.btn-block.border-round-5x(type='button', onClick="parent.location='/google/login'") LOGIN WITH GOOGLE
	div#footer-page.page.bg-drk-gray.padding-top-1p.padding-bottom-1p
		.row
			.col-md-6
				.row
					.col-md-11.col-md-offset-1.text-left.margin-top-1p
						span.text-left
							a.text-white-orange-hover.text-h2.lsf-icon(href="https://twitter.com/seam_meetings", target="_blank", title="twitter")
							a.text-white-pink-hover.text-h2.lsf-icon(href="https://www.linkedin.com/groups/Improving-Meeting-Efficiency-6671618", target="_blank", title="linkedin")
				.row
					.col-md-11.col-md-offset-1
						h4.text-left.text-white &copy; Powered by SEAM 2014.
			.col-md-6
				.row
					.col-md-offset-8.col-md-4.margin-top-1p
						img.margin-center.img-responsive.img-18p.center-box(src="../../images/logo-noWord.png" ,alt="SEAM")