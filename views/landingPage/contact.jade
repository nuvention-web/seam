extends layout2

block content
	div#home-page.page.min-height-100p
		.container-100p
				.row.margin-top-8p
					.col-md-12
						h1.text-black.text-normal Get in touch with us.
				form.form-horizontal(action='/contact', method='post', role='form')
				.form-group.margin-top-3p
					.col-md-4.col-md-offset-4.margin-top-1p
						input.text-h4.text-left.form-control.outline-gray.form-square(name='names', type='text', placeholder='Name', required)
				.form-group.margin-top-3p
					.col-md-4.col-md-offset-4.margin-top-1p
						input.text-h4.text-left.form-control.outline-gray.form-square(name='email', type='text', placeholder='Email', required)
				.form-group.margin-top-3p
					.col-md-4.col-md-offset-4.margin-top-1p
						textarea.text-h4.text-left.form-control.outline-gray(name='comments', rows='5', placeholder='Message', required)
				.form-group
					.col-md-2.col-md-offset-5.margin-top-3p
						button.btn.btn-primary.bg-pink-orange-hover.btn-lg.btn-block.border-round-5x(type='submit') Send Message
	div#footer-page.page.bg-drk-gray.padding-top-1p.padding-bottom-1p
		.row
			.col-md-6
				.row
					.col-md-11.col-md-offset-1.text-left.margin-top-1p
						span.text-left
							a.text-white-orange-hover.text-h2.lsf-icon(href="https://twitter.com/seam_meetings", target="_blank", title="twitter")
							a.text-white-pink-hover.text-h2.lsf-icon(href="https://www.linkedin.com/groups/Improving-Meeting-Efficiency-6671618", target="_blank", title="linkedin")
				.row
					.col-md-11.col-md-offset-1
						h4.text-left.text-white &copy; Powered by SEAM 2014.
			.col-md-6
				.row
					.col-md-offset-8.col-md-4.margin-top-1p
						img.margin-center.img-responsive.img-18p.center-box(src="../../images/logo-noWord.png" ,alt="SEAM")