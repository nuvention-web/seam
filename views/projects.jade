extends header

block content
	.container.margin-top-5p
		.row
			.col-md-12
				img.img-responsive.margin-center.img-30p(src="images/seamlogo-red.png")
		.row.margin-top-5p
			.col-md-12
				h2.text-upper.text-normal Welcome, #{name}
		.row
			.col-md-12
				h4 Select a project, or create a new one.
		.row.margin-top-1p
			.col-md-6.col-md-offset-3
				hr.bg-ltgray
				h5.margin-top-0x.margin-bottom-0x
					a.text-upper.text-bold.text-h4.text-black(href="welcome") EPIC
		.row
			hr.bg-ltgray(style='width: 444px;')
			form.form-inline.form-center(role='form', method='POST', action='/addproject')
				.row#addNewProject(style="display: none")
					.col-md-4.col-md-offset-4.padding-top-1p
						input.form-control.border-square(type='text', name='addProject', value='', id='addProject')
					.col-md-4.col-md.offset-8.padding-top-1p
						button.btn.btn-primary.margin-center.border-square.bg-red-border(type='submit') ADD
				.row
					.col-md-2.col-md-offset-5.padding-top-1p
						button.btn.btn-primary.btn-lg.btn-block.margin-center.border-square.bg-red-border(type='button' onclick='toggleView("addNewProject")') NEW PROJECT
		.row
			.col-md-6.col-md-offset-3
				hr.bg-ltgray
