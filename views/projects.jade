extends header

block content
	.container.margin-top-5p
		.row
			.col-md-12
				img.img-responsive.margin-center.img-30p(src="images/seamlogo-red.png")
		.row.margin-top-5p
			.col-md-12
				h2.text-upper.text-normal Welcome, #{name}
		.row
			.col-md-12
				h4 Select a project, or create a new one.
		each project, i in projectList
			.row
				.col-md-6.col-md-offset-3
					hr.bg-ltgray
					form(role='form', method='POST', action='/welcome', id='project'+i)
						input(type='hidden', name='projectId', value='#{project._id}')
						input(type='hidden', name='projectName', value='#{project.projectName}')
						h5.margin-top-0x.margin-bottom-0x
							a.text-black.text-h5.text-upper.text-bold(type='button', href="javascript:{}" onclick="document.getElementById('project#{i}').submit();") #{project.projectName}
		.row
			hr.bg-ltgray(style='width: 444px;')
			form.form-inline.form-center(role='form', method='POST', action='/addproject')
				.row#addNewProject(style="display: none")
					.col-md-4.col-md-offset-4
						input.form-control.border-square(type='text', name='projectName', value='', id='projectName')
					.col-md-4.col-md.offset-8
						button.btn.btn-primary.margin-center.border-square.bg-red-border(type='submit') ADD
				.row
					.col-md-2.col-md-offset-5
						button.btn.btn-primary.btn-block.margin-center.border-square.bg-red-border(type='button' onclick='toggleView("addNewProject")') NEW PROJECT
		.row
			.col-md-6.col-md-offset-3
				hr.bg-ltgray
