extends ../dashboard/sidebarMeetings

block interfaces
	.bg-white(style="margin-left:35%; top:0px; position:absolute; width:65%; float:right")
		.container-85p.margin-center
			.row.padding-top-2p
				.col-md-12
					h3.text-red.text-bold.text-capital #{meeting.meetingTitle}						
			.row
				.col-md-4.col-md-offset-2
					h4.text-black.text-right LENGTH:
				.col-md-4
					h4.text-black.text-left #{meeting.meetingTime} Minutes
			.row.margin-top-3p
				.col-md-8.col-md-offset-2
					h4.text-black.text-center.text-bold OJBECTIVES:
			.row
				.col-md-8.col-md-offset-2
					h4.text-black.text-center.text-capital #{meeting.objective}
			.row.margin-top-5p
				.col-md-6.col-md-offset-3
					h4.text-black.text-upper.text-center.text-bold agenda items
			each agenda, i in meeting.agenda
				.row.padding-top-2p
					.col-md-1.col-sm-1.col-xs-1
						h4.text-center.margin-left-2p.text-capital #{i+1}.
					.col-md-7.col-sm-7.col-xs-7
						h4.text-left.text-capital #{agenda.topic}
					.col-md-4.col-sm-4.col-xs-4.text-right.red-input
						h4.text-right.text-red.text-capital #{agenda.duration}
			.row.margin-top-10p
				.col-md-4.col-md-offset-4.text-center
					if(past == 0)
						a(href="/dashboard/meetings/start")
							button.border-red.btn.btn-primary.btn-lg.btn-block.border-square.bg-red-hover.text-white-nohover.margin-left-1p(type='button') BEGIN MEETING
					else
						a(href="/dashboard/meetings/view/pastMeeting")
							button.border-red.btn.btn-primary.btn-lg.btn-block.border-square.bg-red-hover.text-white-nohover.margin-left-1p(type='button') VIEW MEETING
						