extends ../dashboard/dashboard

block content
	.row
		.col-md-12.bg-white.border-gray.border-shadow-1x(style='min-height:150px; height:auto')
			.row
				.col-md-6.col-sm-6.col-xs-6.margin-top-1p
					h2.text-left.text-black.text-normal.padding-left-1p #{meeting.meetingTitle}
				.col-md-3.col-sm-3.col-xs-3.margin-top-1p

				.col-md-3.col-sm-3.col-xs-3.margin-top-1p.disp-inline-block
					h2#countdownTimer.text-right.text-black.text-normal.float-right
					h2.text-right.text-black.padding-right-3p.float-right #{meeting.meetingDate}					
			.row.padding-left-1p
				.col-md-10.margin-top-1p.padding-left-1p
					span.text-h3.text-left.text-orange
						b OBJECTIVE: 
						|  #{meeting.objective}
	.row.margin-top-2p.margin-bottom-3p
		.col-md-9
			.row.bg-white.border-gray.border-shadow-1x.margin-right-1p.margin-left.height-auto.padding-bottom-3p
				.container-95p.margin-center
					.row
						.col-md-12.margin-top-1p.padding-bottom-2p.margin-left-1p
							h4.text-left.text-normal.text-gray MEETING AGENDA
						input(type="hidden" id="progressValues" value='#{meeting.timerInfo}')
					each agenda, i in meeting.agenda
						.row
							.col-md-1.margin-top-1p.padding-bottom-2p.margin-0.padding-0
								div.height-100p.width-100p
									.progress.progress-striped.progress-vertical-circle.progress-striped.active.progress-success.margin-top-n1x.margin-bottom-0p
										.bar(style="width:40px")
							.col-md-10.margin-0.padding-0
									h3.text-black.text-left.text-capital.margin-0.text-normal #{agenda.topic}
						.row
							.col-md-1.margin-top-1p.padding-bottom-2p.margin-0.padding-0
								div.height-100p.width-100p
									.progress.progress-striped.progress-vertical-line.progress-striped.active.progress-success.margin-top-n1x.margin-bottom-0p
										.bar(id='progressBar#{i+1}')
							.col-md-11.margin-0.padding-0
								div.width-95p.margin-top-1p.overflow-scroll-y-auto.max-height-150x#notesList
									each note, j in agenda.notes
										h4.text-black.text-left #{note.notes}
								form(role='form', method='POST', name='TNForm', action='/dashboard/meetings/start/addNote', value='#{i}', id='TNForm#{i}')
									input(type='hidden', name='noteOrder', value='#{i}')
									div.container-95p.margin-top-2p
										if(i == 0)
											.row
												input.text-h5.height-30x.margin-left-2p.form-control.border-square.border-orange.text-left.bg-white.margin-0.margin-right-1p(id='notes#{i}', type='text', name='notes', placeholder= 'Start Typing...', tabindex='#{i+1}', autofocus='autofocus', autocomplete='off')
											.row(style="display: none", id='taskPerson#{i}')
												.col-md-10
													input.text-h5.height-30x.margin-left-2p.form-control.border-square.border-orange.text-left.bg-white.margin-0.margin-right-1p(id='taskPerson', type='text', name='taskPerson', placeholder='Add People', autocomplete='off')
												.col-md-2
													button.padding-btn.text-left.border-square.bg-white.border-orange.border-orange.text-orange(id='taskSubmit' type='button', value='#{i}') ADD TASK
										else
											.row
												input.text-h5.height-30x.margin-left-2p.form-control.border-square.border-orange.text-left.bg-white.margin-0.margin-right-1p(id='notes#{i}', type='text', name='notes', placeholder= 'Start Typing...', tabindex='#{i+1}', autocomplete='off')
											.row(style="display: none", id='taskPerson#{i}')
												.col-md-10
													input.text-h5.height-30x.margin-left-2p.form-control.border-square.border-orange.text-left.bg-white.margin-0.margin-right-1p(id='taskPerson', type='text', name='taskPerson', placeholder='Add People', autocomplete='off')
												.col-md-2
													button.padding-btn.text-left.border-square.bg-white.border-orange.border-orange.text-orange(id='taskSubmit' type='button', value='#{i}') ADD TASK
									div.container-95p.margin-top-1p.margin-center
										.row
											.col-md-4.col-md-offset-1.margin-top-2p
												button.padding-btn.float-right.text-right.border-square.bg-white.border-orange.border-orange.text-orange(id='noteSubmit' type='submit', value='#{i}') ADD NOTES
											.col-md-4.margin-top-2p
												button.padding-btn.text-left.border-square.bg-white.border-orange.border-orange.text-orange(type='button', onClick='showTaskForm("taskPerson#{i}")') ASSIGN TASK
					.row
						.col-md-1.margin-top-1p.padding-bottom-2p.margin-0.padding-0
							div.height-100p.width-100p
								.progress.progress-striped.progress-vertical-circle.progress-striped.active.progress-success.margin-top-n1x.margin-bottom-0p
									.bar(style="width:40px")
						.col-md-10.margin-0.padding-0
								h3.text-black.text-left.text-capital.margin-0.text-normal END
		.col-md-3
			.row.height-auto.bg-white.border-gray.border-shadow-1x.margin-left-1p.overflow-scroll-y-auto.overflow-x-hidden.padding-bottom-10p
				.col-md-12.margin-top-1p
					h4.text-left.text-normal.text-gray.margin-left-1p ATTENDEES
					.container-95p.margin-center.margin-top-3p
						each attendee, i in meeting.attendees
							.row.margin-top-10p
								.col-md-12.attendeeMember
									img.width-50x.height-50x.border-50p.float-left(src="../../../images/member.png", value='#{attendee.attendeeName}')
									h4.text-black.text-left.margin-top-1p(value='#{attendee.attendeeName}') #{attendee.attendeeName}
									h5.text-left.margin-top-5p.text-orange.text-normal PRESENT
			.row.margin-left-1p
					.col-md-12.col-sm-12.col-xs-12.margin-top-1p.text-left.margin-top-2p.text-center.margin-top-10p
						button.border-square.bg-white.border-orange.border-orange.text-orange.text-h3.padding-btn(type='button', onClick="parent.location='/dashboard/meetings/end'") FINISH MEETING
	script(src='../../../javascripts/meetings-assignTasks.js')
	script(src='../../../javascripts/meetings-update.js')
	script(src='../../../javascripts/notify.min.js')
	script(src='../../../javascripts/meetings-progressBar.js')
	script(type="text/javascript" src="../../../javascripts/jquery.plugin.js")
	script(type="text/javascript" src="../../../javascripts/jquery.countdown.js")