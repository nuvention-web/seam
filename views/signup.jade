extends layout

block content
	.screenBg
		.container
			.row
				.col-md-12
					h2.text-white Sign Up
			form.form-inline.form-center(role='form', method='POST', action='/signup')
				.row
					.col-md-6.col-md-offset-3.padding-top-5p.form-group
						input.form-control.border-square(id='signup', type='text', name='email', placeholder= 'EMAIL')
				.row
					.col-md-6.col-md-offset-3.padding-top-5p.form-group
						input.form-control.border-square(id='signup', type='password', name='password', placeholder= 'PASSWORD')
				.row
					.col-md-4.col-md-offset-4
						button.btn.btn-primary.btn-lg.btn-block.margin-center.border-square.bg-red-border(type='submit') SIGN UP
