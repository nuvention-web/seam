extends layout

block content
	.survey-page
		.screenBg
			.container
				.row
					.col-md-12
						h2.text-white.text-bold MeetingBuddy
				.row
					.col-md-12
						h2.text-white Thank you for your interest in MeetingBuddy. Who are you? We'd like to know. If you're interested, we'd like to get some more information about you.
						br
				form.form-inline.form-center(role='form', method='POST', action='addsurvey')
					.row
						.col-md-4.col-md-offset-2.spacing-top.form-group
							input.form-control.btn-square(id='email', type='text', placeholder='FIRST NAME', name='firstName')
						.col-md-4.spacing-top.form-group
							input.form-control.btn-square(id='email', type='text', placeholder='LAST NAME', name='lastName')
					.row.spacing-top-3
						.col-md-8.col-md-offset-2.spacing-top.form-group
							input.form-control.btn-square(id='email', type='text', placeholder='INDUSTRY', name='industry')
					.row
						.col-md-8.col-md-offset-2.spacing-top.form-group
							input.form-control.btn-square(id='email', type='text', placeholder='FUNCTION', name='func')
					.row
						.col-md-8.col-md-offset-2.spacing-top.form-group
							input.form-control.btn-square(id='email', type='text', placeholder='MEETING FREQUENCY', name='meetingFrequency')
					.row
						.col-md-8.col-md-offset-2.spacing-top.form-group
							input.form-control.btn-square(id='email', type='text', placeholder='LEVEL OF FRUSTRATION WITH MEETINGS', name='frustration')
					.row
						.btn-box
							button.btn.btn-primary.btn-lg.btn-block.btn-square.btn-large-custom.btn-red(type='submit') GET TO KNOW ME
			footer.spacing-top-3
				h3.text-white &copy; MeetingBuddy 2014