extends layout

block content
	div.navbar.transparent.navbar-inverse.navbar-fixed-top(role='navigation')
		.container
			.navbar-header
				button(type='button', class='navbar-toggle', data-toggle='collapse', data-target='.navbar-collapse')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a(class='navbar-brand text-bold', href='home') MeetingBuddy
			.navbar-collapse.collapse
				.navbar-right
					ul.nav.navbar-nav
						li
							a(class='text-bold', href='home#home-page') HOME
						li
							a(class='text-bold', href='home#about-page') ABOUT
						li
							a(class='text-bold', href='login') ADMIN
	br
	br
	.container
		form.form-inline.form-center(role='form', name='addUser', method='post', action='/admin')
			.row
				.col-md-10.col-md-offset-1.form-group
					input#username(name='adminusername', type="text", class="form-control btn-square", placeholder='NAME')
			.row
				.col-md-10.col-md-offset-1.spacing-top.form-group
					input#useremail(name='adminpassword', type="text", class="form-control btn-square", placeholder='PASSWORD')
			.row.spacing-top-1
				.btn-box
					button(type='submit', class='btn btn-primary btn-lg btn-block btn-square btn-large-custom btn-red') LOG IN